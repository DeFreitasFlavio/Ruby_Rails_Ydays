<h1>Articles</h1>

<% Article.all.each do |article| %>

<div class="card">
  <div class="image">
  <img src="../assets/CoucherDeSoleil.png" alt="Avatar" style="width:100%">
  </div>
  <div class="container">
    <h1><%= article.bro %></h1>
    <%= link_to article.title, article %>
  </div>
</div>

<% end %>
<%= button_to "New Article", new_article_path(@article)%>
