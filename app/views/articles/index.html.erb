<h1>Articles</h1>

<% @articles.each do |article| %>

<div class="flip-card">
  <div class="flip-card-inner">
    <div class="flip-card-front">
      <img src="../assets/CoucherDeSoleil.png" alt="Avatar" style="width:300px;height:200px;">
    </div>
    <div class="flip-card-back">
      <h1><%= article.bro %></h1>
      <p> <%= article.title %></p>
    </div>
  </div>
</div>
<% end %>